<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/grey"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:background="@color/white">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/left"
            android:padding="5dp"
            android:background="@color/white"
            android:clickable="true"
            android:id="@+id/home_img_button_status_change"
            android:scaleType="fitCenter"
            />
        <TextView
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/skin"
            android:gravity="center"
            android:layout_marginRight="60dp"
            android:text="@string/select_status"
            android:layout_width="fill_parent" />
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ok_purple"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:clickable="true"
            android:layout_gravity="right"
            android:id="@+id/ok_confirm_status"
            android:scaleType="fitCenter"
            />
    </android.support.v7.widget.Toolbar>
    <RadioGroup
        android:layout_width="match_parent"
        android:padding="10dp"
        android:id="@+id/radiogroup_status"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="match_parent"
            android:id="@+id/ready_status"
            android:layout_margin="10dp"
            android:text="@string/ready_status"
            android:checked="true"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_width="match_parent"
            android:id="@+id/dispatch_status"
            android:text="@string/dispatch_status"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_width="match_parent"
            android:id="@+id/cancel_status"
            android:text="@string/cancel_status"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" />
    </RadioGroup>
</LinearLayout>